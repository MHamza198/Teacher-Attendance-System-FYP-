<h1>Add Course</h1>
<form action="/admin/add-course" method="POST">
  <div class="form-group">
    <label for="department">Department:</label>
    <select class="form-control" id="department" name="department" required>
      <option value="">Select Department</option>
      {{#each departments}}
        <option value="{{this._id}}">{{this.department_name}}</option>
      {{/each}}
    </select>
  </div>
  <div class="form-group">
    <label for="degree">Degree:</label>
    <select class="form-control" id="degree" name="degree_name" required>
      <option value="">Select Degree</option>
      {{#each degrees}}
        <option value="{{this._id}}">{{this.degree_name}}</option>
      {{/each}}
    </select>
  </div>
  <div class="form-group">
    <label for="course_name">Course Name:</label>
    <input type="text" class="form-control" id="course_name" name="course_name" required>
  </div>
  <div class="form-group">
    <label for="course_code">Course Code:</label>
    <input type="text" class="form-control" id="course_code" name="course_code" required>
  </div>
  <button type="submit" class="btn btn-primary">Add Course</button>
</form>

<!-- Added Data Table -->
<h2>Added Data</h2>
<table class="table">
  <thead>
    <tr>
      <th>Department</th>
      <th>Degree</th>
      <th>Course Name</th>
      <th>Course Code</th>
      <th>Action</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    {{#each courses}}
    <tr>
      <td>{{this.department.department_name}}</td>
      <td>{{this.degree_name.degree_name}}</td>
      <td>{{this.course_name}}</td>
      <td>{{this.course_code}}</td>
      <td>
        <form action="/admin/remove-course" method="POST">
          <input type="hidden" name="course_id" value="{{this._id}}">
          <button type="submit" class="btn btn-danger">Remove</button>
        </form>
      </td>
    </tr>
    {{/each}}
  </tbody>
</table>

